@model MyStoreAdminDashboard.Services.OrderDto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <hr />
        @foreach (var product in Model.Products)
        {
            <div class="card col-6" style="width: 18rem;">
                <div class="card-body">
                    <h5>@product.Name</h5>
                    <p>@product.Description</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Brand: @product.Manufacturers</li> 
                    <li class="list-group-item">@product.Price den</li>
                </ul>
            </div>
        }
</div>